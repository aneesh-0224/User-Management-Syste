<% layout('../views/layout') %> 

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% for(let user of allUsers){%> 
      <tr>
        <th scope="row">1</th>
        <td><%= user.firstname %> </td>
        <td><%= user.lastname %> </td>
        <td><%= user.email %> </td>
        <td><%= user.phone %> </td>
        <td>
            <a href="/user/<%=user._id%>"type="button" class="btn btn-light-sm border-dark">View</a>
            <a href="/user/<%= user._id %>/edit"type="button" class="btn btn-light-sm">Edit</a>
            <a>
            <form action="/user/<%= user._id %>/delete" class="inline">
            <button type="submit" class="btn btn-light-sm border-dark">Delete</button>
            </a>
          </form>
        </td>
      </tr>
      <% } %> 
    </tbody>
  </table>